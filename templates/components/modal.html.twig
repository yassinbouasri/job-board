<div x-data="{ open: false }" class="relative z-10"
     @open-modal.window="open = true"
     @close-modal.window="open = false"
     class="relative z-10"
     x-cloak
    >



    <div x-show="open" x-transition
         class="fixed inset-0 z-10 overflow-y-auto"
         aria-labelledby="modal-title"
         role="dialog"
         aria-modal="true"
         style="display: none;">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-gray-500/75 transition-opacity" @click="open = false" aria-hidden="true"></div>


        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
                 @click.away="open = false">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 sm:mt-0 ml-2  text-left">
                            <h2 class="text-base font-semibold text-gray-900" id="modal-title">{{ title }}</h2>
                            <hr class="border-t border-gray-300 my-4" />

                            <div class="mt-2">
                                <p class="text-sm text-gray-500 ">
                                    {{ content }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
